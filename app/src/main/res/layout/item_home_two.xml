<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/bg_color"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">


    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:background="@color/title_color"></View>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:background="@drawable/time_shape"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="10:00"
        android:textColor="@color/title_color"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/not_data_tv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="52dp"
        android:background="@drawable/btn_while_background"
        android:gravity="center|left"
        android:paddingBottom="6dp"
        android:paddingLeft="60dp"
        android:text="暂无预约"
        android:textColor="#9D9D9D"
        android:textSize="14dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/data_fl"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="52dp"
        android:background="@drawable/btn_while_background"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/person_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/not_image_path" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="60dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/person_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="4dp"
                    android:text=""
                    android:textColor="@color/text_back_color"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/flag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/person_shape"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="初诊"
                    android:textColor="@color/yellow_coloe"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/flag_two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/person_two_shape"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="复诊"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="58dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/sta_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/text_gry_color"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sta_blue_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_blue_background"
                    android:gravity="center"
                    android:text="接诊"
                    android:textColor="@color/white_color"
                    android:textSize="14dp"
                    android:visibility="gone" />

            </FrameLayout>


        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>